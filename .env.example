# Chapa Payment Gateway Configuration
# Copy this file to .env and fill in your actual values

# Chapa API Configuration
CHAPA_API_KEY=CHASECK_TEST-your-sandbox-secret-key-here
CHAPA_WEBHOOK_SECRET=your-webhook-secret-for-signature-verification

# Environment (sandbox or live)
CHAPA_ENVIRONMENT=sandbox

# Database Configuration (if using database)
DB_HOST=localhost
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASS=your_database_password

# Application URLs
APP_URL=http://localhost
CALLBACK_URL=http://localhost/webhook.php
RETURN_URL=http://localhost/success.php

# Security
APP_SECRET=your-application-secret-key-here
